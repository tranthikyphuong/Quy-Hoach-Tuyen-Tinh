{
	"compilerOptions": {
		"target": "ES5",
		"baseUrl": ".",
		"rootDirs": ["src"],
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
		"declaration": true,
		"paths": {
			"*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/node_modules/*"]
}